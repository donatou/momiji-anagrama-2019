<main class="cuenta">
  
  <section class="cuenta__detalle section__principal">
    <div class="container">
      <div class="row">
          <div class="col-12 cuenta__title">
              <h2>Mi Cuenta</h2>
              <a class="btn__main" href="borrar-cuenta.html">Borrar cuenta</a>
          </div>
      </div>

      <div class="row mt-50 row-mobile">
        <div class="col-md-12 col-lg-6 p-0">
          <div class="col-12 section__title">
            <h3>Historia de órdenes</h3>
          </div>
          <div class="col-12 d-none d-md-block">
            <table>
              <tr>
                <th>Orden</th>
                <th>Fecha</th>
                <th>Estatus de Envío</th>
                <th>Total</th>
              </tr>
              {% for order in customer.orders %}
              <tr>
                <td>{{ order.name | link_to: order.customer_url }}</td>
                <td>{{ order.created_at | date: format: 'month_day_year' }}</td>
                <td>{{ order.fulfillment_status_label }}</td>
                <td>{{ order.total_price | money }}</td>
              </tr>
              {% endfor %}
            </table>
          </div>

          <div class="col-12 d-md-none">
          {% for order in customer.orders %}
            <div class="card__order">
              <table>
                <tr>
                  <th>Orden</th>
                  <td>{{ order.name | link_to: order.customer_url }}</td>
                </tr>
                <tr>
                  <th>Fecha</th>
