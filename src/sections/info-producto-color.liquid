<script src="https://vjs.zencdn.net/7.8.4/video.js"></script>
<!-- END: VIDEO JS -->

<script>
    $(function () {
        var swiper = new Swiper(".swiper-info", {
            autoplay: {
                delay: 3500,
            },
            pagination: {
                el: ".swiper-pagination",
                clickable: true,
                renderBullet: function (index, className) {
                    return "<span class=\"" + className + "\">" + (
                        index + 1
                    ) + "</span>";
                }
            }
        });
    })
</script>