<div class="container" id="reviews">
  <div class="row">

    <div class="swiper-container">
      <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="reseñas-inner-container">
            <h3 class="reseñas">{{ block.settings.press_text }}</h3>
            <h5 class="press h2">{{ block.settings.press_logotext }}</h5>
          </div>
        </div>
      {% endfor %}
      </div>
      <!-- Add Pagination -->
      <div class="swiper-pagination"></div>
      <!-- Add Pagination -->
      {% comment %} <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div> {% endcomment %}
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Reviews",
  "settings": [
      {
        "type": "header",
        "content": "Reseñas de medios"
      }
  ],
  "blocks": [
    {
      "type": "select",
      "name": "Press Review",
      "limit": 5,
      "settings": [
        {
          "id": "press_logotext",
          "type": "text",
       	  "label": "Press Name"
        },
        {
          "id": "press_text",
          "type": "textarea",
       	  "label": "Review"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Reviews",
      "category": "Reviews",
      "blocks": [
        { 
          "type": "select"
        },
        {
          "type": "select"
        }
      ]
    }
  ]
}
{% endschema %}