<div class="marco">
    <a class="design-wrapper">
      {% comment %} <img class=""
              src="{{ section.settings.hero-banner-image | img_url: '2048x' }}"
              data-src="{{ img_url }}"
              data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
              data-sizes="auto"
              alt="{{ page.title | escape }}"> {% endcomment %}

      <picture>
        <!-- MOBILE-->
        <source 
          srcset="{{ section.settings.hero-mobile-image-1x | img_url: '883x' }},
                  {{ section.settings.hero-mobile-image-2x | img_url: '1766x' }} 2x,
                  {{ section.settings.hero-mobile-image-3x | img_url: '2648x' }} 3x,
                  {{ section.settings.hero-mobile-image-4x | img_url: '3541x' }} 4x
                  "
          media="(max-width: 991.98px)">
        <!-- MOBILE-->
        <!-- DESKTOP-->
        <source
          srcset="{{ section.settings.hero-desktop-image-1x | img_url: '1832x' }},
                  {{ section.settings.hero-desktop-image-2x | img_url: '3664x' }} 2x,
                  {{ section.settings.hero-desktop-image-3x | img_url: '4470x' }} 3x,
                  {{ section.settings.hero-desktop-image-4x | img_url: '4470x' }} 4x
                  "
          media="(max-width: 4470px)">
        <!-- DESKTOP-->
        <!-- FALLBACK-->
        <img src="{{ section.settings.hero-desktop-image-2x | img_url: '2048x' }}" alt="logo">
        <!-- FALLBACK-->
      </picture>

    </a>
</div>

