      {
        "type": "text",
        "id": "servicioalcliente_title",
        "label": "Título servicio al cliente",
        "default": "Servicio al cliente"
      },
      {
        "type": "text",
        "id": "email_sc",
        "label": "Email servicio a clientes",
        "default": "clientes@momijibeauty.com"
      },
      {
        "type": "text",
        "id": "horario_atencion",
        "label": "Horario de atención",
        "default": "Lunes a Sábado: 10am—5pm"
      },
      {
        "type": "textarea",
        "id": "newsletter_title",
