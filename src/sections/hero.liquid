<section class="hero" data-section-type="hero">
<div class="hero__slider slider">
    <div class="swiper-container">
        <div class="swiper-wrapper">

            {% comment %} Slides {% endcomment %}
            {% for block in section.blocks %}
            <div class="swiper-slide" {{ block.shopify_attributes }} data-swiper-autoplay="{{ section.settings.duracion | times: 1000 }}">
              {% comment %} first image is for mobile {% endcomment %}
              <img srcset="{{ block.settings.image-mobile | img_url: '830x', format: 'pjpg' }} 500w, 
                    {{ block.settings.image-full | img_url: '1900x', format: 'pjpg' }}"
                src="{{ block.settings.image-full | img_url: '1900x', format: 'pjpg' }}" alt="Imagen promocional"/>

              {% if block.settings.theme_layout contains "complete" %}
              <div class="container-fluid">
                <div class="row">
                  <div class="col-sm-12 col-md-7 col-lg-6 col-xl-5 
                  {% if block.settings.sticker %} sticker-hero{% endif %}
                  {% if block.settings.sticker-buenfin %} sticker-buenfin{% endif %}
                  ">
                    <h1>{{ block.settings.titulo }}</h1>
                    <p>{{ block.settings.subtitulo }}</p>
                    <a href="{{ block.settings.link_boton }}" class="btn__main">{{ block.settings.texto_boton }}</a>
                  </div> 
                </div>
              </div>

              {% elsif block.settings.theme_layout contains "no_text" %}
              <div class="container-fluid">
                <div class="row">
                  <div class="col-sm-12 col-md-7 col-lg-6 col-xl-5 
                  {% if block.settings.sticker %} sticker-hero{% endif %}
                  {% if block.settings.sticker-buenfin %} sticker-buenfin{% endif %}
                  ">
                    <a href="{{ block.settings.link_boton }}" class="btn__main">{{ block.settings.texto_boton }}</a>
                  </div> 
                </div>
              </div>
            
              {% elsif block.settings.theme_layout contains "no_button" %}
              <div class="container-fluid">
                <div class="row">
                  <div class="col-sm-12 col-md-7 col-lg-6 col-xl-5 
                  {% if block.settings.sticker %} sticker-hero{% endif %}
                  {% if block.settings.sticker-buenfin %} sticker-buenfin{% endif %}
                  ">
                    <h1>{{ block.settings.titulo }}</h1>
                    <p>{{ block.settings.subtitulo }}</p>
                  </div> 
                </div>
              </div>

              {% else block.settings.theme_layout contains "nothing" %}
              <div class="container-fluid">
              </div>

              {% endif %}

            </div>
            {% endfor %}

        </div>
        <div class="swiper-pagination"></div>
    </div>
</div>
</section>

{% schema %}
{
  "name": "Slideshow hero",
  "max_blocks": 3,
  "class": "hero",
  "settings": [
    {
      "id": "duracion",
      "type": "range",
      "min": 2,
      "max": 10,
      "step": 1,
      "unit": "seg",
      "label": "Duración entre slides",
      "default": 3
}
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Promo banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "image-full",
          "label": "Imagen de fondo full size",
          "info": "1900 x 1000, JPEG 50% ~ 52%"
        },
        {
          "type": "image_picker",
          "id": "image-mobile",
          "label": "Imagen de fondo para móviles",
          "info": "830 x 1325, JPEG 50% ~ 52%"
        },
        {
          "type": "radio",
          "id": "theme_layout",
          "label": "Layout",
          "options": [
            { "value": "complete", "label": "Normal" },
            { "value": "no_text", "label": "Sin textos" },
            { "value": "no_button", "label": "Sin boton" },
            { "value": "nothing", "label": "Sin elementos" }
          ]
        },
        {
          "type": "text",
          "id": "titulo",
          "label": "Título",
          "default": "Aquí ingresa el título de la slide."
        },
        {
          "type": "textarea",
          "id": "subtitulo",
          "label": "Subtítulo",
          "default": "Este es el espacio para poner el subtítulo de la slide."
        },
        {
          "type": "text",
          "id": "texto_boton",
          "label": "Texto del botón",
          "default": "Texto del Botón"
        },
        {
          "type": "url",
          "id": "link_boton",
          "label": "Link del botón"
        },
        {
          "type": "checkbox",
          "id": "sticker",
          "label": "Sticker Momi.",
          "default": true,
          "info": "Muestra sticker de Momi."
        },
        {
          "type": "checkbox",
          "id": "sticker-buenfin",
          "label": "Sticker Buen Fin 2019.",
          "default": true,
          "info": "Muestra sticker del Buen Fin."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero promo banner",
      "category": "Image",
      "settings": {
        "duracion": 3
      },
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}