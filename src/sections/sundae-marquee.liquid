      }
    ],
    "blocks": [
      {
        "type": "block-1",
        "name": "Block 1",
        "settings": [
          {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
          },
          {
             "type": "text",
             "id": "title",
             "label": "Title"
          }
        ]
      },
      {
        "type": "block-2",
        "name": "Block 2",
        "settings": [
          {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
          },
          {
             "type": "text",
             "id": "title",
             "label": "Title"
          }
        ]
      },
      {
        "type": "block-3",
        "name": "Block 3",
        "settings": [
          {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
          },
          {
             "type": "text",
