<header data-section-type="header">
<div class="header">
  <div class="header__sitebanner d-md-flex"{% if section.settings.white == true %} style="background: #fff;"{% endif %}>
    <div class="header__currency align-items-center d-none d-md-flex">
      {% include 'currency-selector' %}
    </div>
    {% include 'barra-anuncios' %}
    
    <div class="header__cuenta d-none d-md-block">
      {% include 'header-account' %}
    </div>
  </div>

  <div class="header__nav d-flex justify-content-between">
    <nav class="d-flex align-items-baseline">

      <div class="mobile-btn d-lg-none">
        <div class="nav-btn"></div>
      </div>

      <div class="header__nav--logo">
        <a href="/"><img src="{{ 'momiji-logo-rgb.svg' | asset_url }}" alt="{{ shop.name }}" itemprop="logo"></a>
      </div>
      <ul class="header__nav--menu list-unstyled">
        <li class="nav-item nav-item--cat"><a>Skincare</a>
          <div class="header__nav--level-2">
              <div class="container">
                <div class="row">
                  <div class="offset-lg-1 col-lg-3">
                    <div class="menu-drawer">
                      <p class="h3">{{ rutina.title }}</p>
                      <ul class="sub-nav list-unstyled">
                        {% for link in rutina.links %}
                        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                        {% endfor %}
                      </ul>
                    </div>

                    <div class="menu-drawer">
                      <p class="h3">{{ tipoDePiel.title }}</p>
                      <ul class="sub-nav list-unstyled">
                        {% for link in tipoDePiel.links %}
                        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                        {% endfor %}
                      </ul>
                    </div>
                  </div>

                  <div class="col-lg-3">
                    <div class="menu-drawer">
                      <p class="h3">{{ soluciones.title }}</p>
                      <ul class="sub-nav list-unstyled">
                        {% for link in soluciones.links %}
                        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                        {% endfor %}
                      </ul>
                    </div>

                    <a href="/pages/marcas" class="a__all mt-30">ver marcas</a>
                    <span> / </span>
                    <a href="collections/todos-los-productos" class="a__all mt-30">ver todos</a>
                  </div>

                  <div class="col-lg-4 br">
                    <div class="row">
                      <div class="col-md-8 mx-auto">
                        {% include 'producto-menu' %}
                      </div>
                    </div>
                  </div>
              </div>
            </div>
          </div>
        </li>
        {% for link in top.links %}
        <li class="nav-item"><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
      </ul>
    </nav>

    <div class="header__nav--icons d-flex">
      <div class="header__icons--search d-none d-md-block">
        <a data-modal="search"><img src="{{ 'search.svg' | asset_url }}" alt="Search"></a>
      </div>
      {%- comment -%}<div class="header__icons--love d-none d-md-block">
        <a href="#swym-wishlist" class="swym-wishlist"><img src="{{ 'wishlist-header.svg' | asset_url }}" alt="Wishlist"></a>
      </div>{%- endcomment -%}
      <div class="header__icons--shop">
        <a href="/cart" class="cart-summary"><img src="{{ 'cart.svg' | asset_url }}" alt="Cart"><span class="cart-quantity">{{ cart.item_count }}</span></a>
