{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Barra de anuncios"
      },
      {
        "type": "text",
        "id": "barra_anuncios1",
        "label": "Texto promocional 1:",
        "default": "Escribe aquí la promoción o anuncio."
      },
      {
        "type": "url",
        "id": "barra_anuncios1_link",
        "label": "Link 1:"
      },
      {
        "type": "text",
        "id": "barra_anuncios2",
        "label": "Texto promocional 2:",
        "default": "Escribe aquí la promoción o anuncio."
      },
      {
        "type": "url",
        "id": "barra_anuncios2_link",
        "label": "Link 2:"
      },
      {
        "type": "checkbox",
        "id": "white",
        "label": "Fondo blanco",
        "default": false,
        "info": "Hacer blanco el fondo de la barra de anuncios"
      },
      {
        "type": "header",
        "content": "Menú"
      },
      {
        "type": "checkbox",
        "id": "last_item_menu_color",
        "default": false,
        "label": "¿Último elemento de color?"
      },
      {
        "type": "color",
        "id": "last_item_color",
        "label": "Color del último elemento",
        "default": "#0e0e0e"
      },
      {
        "type": "header",
        "content": "Header"
      },
      {
        "type": "product",
        "id": "producto_menu",
        "label": "Producto de menú",
        "info": "Selecciona el producto que estará en el menú"
      }
    ]
  }
{% endschema %}

<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "Organization",
  "name": "{{ shop.name }}",
  {% if section.settings.logo %}
    {% assign image_size = section.settings.logo.width | append:'x' %}
    "logo": "https:{{ section.settings.logo | img_url: image_size }}",
  {% endif %}
  "sameAs": [
    "{{ settings.social_twitter_link }}",
    "{{ settings.social_facebook_link }}",
    "{{ settings.social_pinterest_link }}",
    "{{ settings.social_instagram_link }}",
    "{{ settings.social_tumblr_link }}",
    "{{ settings.social_snapchat_link }}",
    "{{ settings.social_youtube_link }}",
    "{{ settings.social_vimeo_link }}"
  ],
  "url": "{{ shop.url }}{{ page.url }}"
}
</script>

{% if template.name == 'index' %}
  <script type="application/ld+json">
    {
      "@context": "http://schema.org",
      "@type": "WebSite",
      "name": "{{ shop.name }}",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "{{ shop.url }}/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      },
      "url": "{{ shop.url }}{{ page.url }}"
    }
  </script>
{% endif %}
