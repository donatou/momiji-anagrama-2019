<div class="row mb-90">
    <figure class="col-md-8">
        <div class="img-container">
            <img src="{{ 'quienesomos_optimizada.jpg' | asset_url }}" alt="Ale y Cecy Young">
        </div>
    </figure>
    <div class="col-md-4 align-self-end">
        <img src="{{ 'miffy.svg' | asset_url }}" alt="Miffy">
        <hr>
        <b>{{ section.settings.title_pie }}</b>
        <p>{{ section.settings.text_pie }}</p>
    </div>
</div>

