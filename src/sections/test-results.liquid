  {
    "name": "Test Results",
    "settings": [
        {
            "type": "header",
            "content": "Test results content"
        },
        {
            "type": "textarea",
            "id": "text_title",
            "label": "Result's Headline"
        },
        {
            "type": "textarea",
            "id": "text_subtitle",
            "label": "Result's Subtitle"
        },
        {
            "type": "textarea",
            "id": "text_content",
            "label": "Result's Text Content"
        },
        {
            "type": "header",
            "content": "Text content for empty state results."
        },
        {
            "type": "textarea",
            "id": "text_title_empty_state",
            "label": "Result's Headline"
        },
        {
            "type": "textarea",
            "id": "text_subtitle_empty_state",
            "label": "Result's Subtitle"
        },
        {
            "type": "textarea",
            "id": "text_content_empty_state",
            "label": "Result's Text Content"
        }
    ],
    "presets": [
      {
        "name": "Test Results",
        "category": "Beauty Test"
      }
    ]
  }
{% endschema %}