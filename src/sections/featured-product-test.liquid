  letter-spacing: -0.2px;
  line-height: 23px;
  font-weight: 500;
  font-style: normal;
}

.featured-product__accent-color {
  color: {{ settings.featured_product_accent_color }};
}
.btn__agregar--featured {
  display: inline-block;
  font-family: "GT Standard Beta A3", sans-serif;
  font-style: normal;
