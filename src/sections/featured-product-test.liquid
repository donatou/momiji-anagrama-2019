        "type": "html",
        "id": "title_product",
        "label": "Copy principal H1"
      },
      {
        "type": "textarea",
        "id": "subtitle_product",
        "label": "Copy subt√≠tulo"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Imagen 1"
      }
    ],
    "presets": [
      {
        "name": "Featured product TEST",
        "category": "Product"
      }
    ]
  }
