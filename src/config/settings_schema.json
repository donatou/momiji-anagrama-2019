[
  {
    "name": "theme_info",
    "theme_name": "theme",
    "theme_version": "0.8.0",
    "theme_author": "Anagrama",
    "theme_documentation_url": "https://github.com/Shopify/starter-theme",
    "theme_support_url": "https://github.com/Shopify/starter-theme/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color",
        "id": "color_accent",
        "label": "Accent",
        "default": "#c4cdd5",
        "info": "Buttons and special ornaments"
      },
      {
        "type": "color",
        "id": "color_body_text",
        "label": "Text",
        "default": "#161d25"
      },
      {
        "type": "color",
        "id": "color_main_bg",
        "label": "Background",
        "default": "#fff"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "font-serif",
        "default": "helvetica_n4",
        "label": "Serif"
      },
      {
        "type": "font_picker",
        "id": "font-title",
        "default": "helvetica_n4",
        "label": "Title"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social sharing image"
      },
      {
        "type": "image_picker",
        "id": "share_image",
        "label": "Image",
        "info": "Shown when sharing a link on social media. [Learn more](https://help.shopify.com/manual/using-themes/troubleshooting/showing-social-media-thumbnail-images/) about image thumbnails."
      },
      {
        "type": "header",
        "content": "Social sharing options"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "label": "Enable sharing for blog articles",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Tweet on Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pin on Pinterest",
        "default": true
      },
      {
        "type": "header",
        "content": "Sharing links"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter link"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook link"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest link"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram link"
      },
      {
        "type": "text",
        "id": "social_snapchat_link",
        "label": "Snapchat link"
      },
      {
        "type": "text",
        "id": "social_tumblr_link",
        "label": "Tumblr link"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "Youtube link"
      },
      {
        "type": "text",
        "id": "social_vimeo_link",
        "label": "Vimeo link"
      }
    ]
  },
  {
    "name": "Cart Drawer",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Enable cart notes",
        "default": true
      },
      {
        "type": "header",
        "content": "Promociones de carrito"
      },
      {
        "type": "radio",
        "id": "promo_vigente",
        "label": "Tipo de promo:",
        "options": [
          {
            "value": "agrega_producto", "label": "Prod. activa envio gratis"
          },
          {
            "value": "incluye_regalo", "label": "Prod. de regalo"
          },
          {
            "value": "envio_gasto", "label": "Total > X = envio gratis"
          }
        ]
      },
      {
        "type": "header",
        "content": "Prod. activa envio gratis"
      },
      {
        "type": "product",
        "id": "x_product",
        "label": "Producto que debe estar en carrito.",
        "info": "Si es más de un producto, usar un tag en el campo inferior."
      },
      {
        "type": "text",
        "id": "x_product_tag",
        "label": "Tag de productos",
        "info": "Tag de productos a incluir en carrito",
        "placeholder": "Ej: PROMO-REGALO"
      },
      {
        "type": "text",
        "id": "promo_txt",
        "label": "promo",
        "info": "txt promo",
        "placeholder": "cualquier producto de Momiji Brand"
      },
      {
        "type": "header",
        "content": "Prod. de regalo"
      },
      {
        "type": "checkbox",
        "id": "including_product",
        "label": "Incluye un regalo.",
        "default": false,
        "info": "Activarlo cuando el envio gratis incluye un regalo."
      },
      {
        "type": "text",
        "id": "regalo_enviogratis",
        "label": "Copy de promo:",
        "info": "Bla bla bla bla",
        "placeholder": "Incluye de regalo X cosa."
      },
      {
        "type": "header",
        "content": "Total > X = envio gratis"
      },
      {
        "type": "text",
        "id": "costo_enviogratis",
        "label": "Cantidad a gastar para envio gratis:",
        "default": "1100",
        "info": "No incluir signos o puntuación. Shipping rates se modifica en [Envíos](https://momiji-beauty.myshopify.com/admin/settings/shipping)",
        "placeholder": "1100"
      },
      {
        "type": "header",
        "content": "Notas"
      },
      {
        "type": "paragraph",
        "content": "Se debe seleccionar primero el tipo de promoción de carrito y luego llenar la sección correspondiente. El resto de las secciones deben estar completamente en blanco."
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 320 x 320px"
      }
    ]
  }
]
