[
  {
    "name": "theme_info",
    "theme_name": "theme",
    "theme_version": "0.8.0",
    "theme_author": "Anagrama",
    "theme_documentation_url": "https://github.com/Shopify/starter-theme",
    "theme_support_url": "https://github.com/Shopify/starter-theme/issues"
  },
  {
    "name": "Colores de elementos",
    "settings": [
      {
        "type": "color",
        "id": "featured_product_background_color",
        "label": "Featured Product background color",
        "default": "#c4cdd5",
        "info": "Background de sección tipo FEATURED PRODUCT"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "font_picker",
        "id": "font-serif",
        "default": "helvetica_n4",
        "label": "Serif"
      },
      {
        "type": "font_picker",
        "id": "font-title",
        "default": "helvetica_n4",
        "label": "Title"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social sharing image"
      },
      {
        "type": "image_picker",
        "id": "share_image",
        "label": "Image",
        "info": "Shown when sharing a link on social media. [Learn more](https://help.shopify.com/manual/using-themes/troubleshooting/showing-social-media-thumbnail-images/) about image thumbnails."
      },
      {
        "type": "header",
        "content": "Social sharing options"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "label": "Enable sharing for blog articles",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Tweet on Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pin on Pinterest",
        "default": true
      },
      {
        "type": "header",
        "content": "Sharing links"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter link"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook link"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram link"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "Youtube link"
      }
    ]
  },
  {
    "name": "Cart Drawer",
    "settings": [
      {
        "type": "checkbox",
        "id": "cart_notes_enable",
        "label": "Habilitar Regalos en Carrito",
        "default": true
      },
      {
        "type": "text",
        "id": "drawer_present",
        "label": "Invitacion a regalo",
        "placeholder": "¿Tu pedido es un regalo?"
      },
      {
        "type": "text",
        "id": "present_placeholder",
        "label": "Placeholder",
        "placeholder": "Escribe aquí tu mensaje"
      },
      {
        "type": "header",
        "content": "Cross Sales"
      },
      {
        "type": "textarea",
        "id": "prohandles",
        "label": "Productos de Cross Sale",
        "info": "Se usan los \"product handles\" de cada producto separados por coma."
      },
      {
        "type": "text",
        "id": "csTxt",
        "label": "agregar por \/ a solo\/",
        "placeholder": "a solo"
      },
      {
        "type": "header",
        "content": "Promociones de carrito"
      },
      {
        "type": "paragraph",
        "content": "Seleccionar tipo de promo de carrito y luego llenar la sección correspondiente."
      },
      {
        "type": "radio",
        "id": "promo_vigente",
        "label": "Tipo de promo:",
        "options": [
          {
            "value": "envio_gasto",
            "label": "Envío gratis por gasto"
          },
          {
            "value": "envio_gasto_x",
            "label": "Envío en X por gasto Y"
          },
          {
            "value": "agrega_producto",
            "label": "Envío gratis incluyendo producto"
          },
          {
            "value": "incluye_regalo",
            "label": "Producto de regalo"
          },
          {
            "value": "mensaje_custom",
            "label": "Mensaje en carrito"
          }
        ]
      },
      {
        "type": "header",
        "content": "Envío gratis por gasto"
      },
      {
        "type": "text",
        "id": "costo_enviogratis",
        "label": "Total $ en carrito para envio gratis:",
        "default": "1500",
        "info": "No incluir signos o puntuación. Shipping rates se modifica en [Envíos](https://momiji-beauty.myshopify.com/admin/settings/shipping)",
        "placeholder": "1500"
      },
      {
        "type": "paragraph",
        "content": "Este dato también es accesible a las otras opciones de envío."
      },
      {
        "type": "header",
        "content": "Envío en X gastando Y"
      },
      {
        "type": "text",
        "id": "costo_envio_x",
        "label": "Total $ en carrito para envio reducido:",
        "default": "500",
        "info": "No incluir signos o puntuación. Shipping rates se modifica en [Envíos](https://momiji-beauty.myshopify.com/admin/settings/shipping)",
        "placeholder": "500"
      },
      {
        "type": "text",
        "id": "envio_x",
        "label": "Costo de envio reducido:",
        "default": "14",
        "info": "Es el costo al que estara el envio reducido de precio.",
        "placeholder": "14"
      },
      {
        "type": "header",
        "content": "Envío gratis incluyendo producto"
      },
      {
        "type": "product",
        "id": "x_product",
        "label": "Producto que debe estar en carrito."
      },
      {
        "type": "paragraph",
        "content": "Si es más de un producto a incluir en carrito, se deberá taggear los productos y usar a continuación la etiqueta y después completar el texto personalizado más abajo."
      },
      {
        "type": "text",
        "id": "x_product_tag",
        "label": "Etiqueta de productos",
        "placeholder": "Ej: PROMO-REGALO"
      },
      {
        "type": "text",
        "id": "promo_txt",
        "label": "Agrega",
        "info": "para que tu envío sea gratis",
        "placeholder": "cualquier producto de Momiji Brand"
      },
      {
        "type": "header",
        "content": "Producto de regalo"
      },
      {
        "type": "checkbox",
        "id": "including_product",
        "label": "Incluye un regalo.",
        "default": false,
        "info": "Activarlo cuando el envio gratis incluye un regalo."
      },
      {
        "type": "text",
        "id": "costo_enviogratis_x",
        "label": "Cantidad a gastar para regalo:",
        "default": "500",
        "info": "No incluir signos o puntuación. Shipping rates se modifica en [Envíos](https://momiji-beauty.myshopify.com/admin/settings/shipping)",
        "placeholder": "500"
      },
      {
        "type": "text",
        "id": "copy_regalo",
        "label": "Regalo:",
        "info": "Copy del regalo",
        "placeholder": "un kit de viaje gratis."
      },
      {
        "type": "text",
        "id": "textop",
        "label": "Copy previo a regalo:",
        "info": "Tu pedido califica para",
        "placeholder": "Tu pedido califica para"
      },
      {
        "type": "header",
        "content": "Mensaje custom"
      },
      {
        "type": "text",
        "id": "mensaje",
        "label": "Mensaje custom",
        "info": "Agrega un mensaje al carrito.",
        "placeholder": "Envíos con descuento toda la semana."
      },
      {
        "type": "header",
        "content": "Términos y condiciones"
      },
      {
        "type": "text",
        "id": "tyc_title",
        "label": "Terminos y condiciones link",
        "placeholder": "Revisa los términos y condiciones de esta promoción."
      },
      {
        "type": "richtext",
        "id": "tyc_text",
        "label": "Terminos y condiciones"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Will be scaled down to 320 x 320px"
      }
    ]
  }
]