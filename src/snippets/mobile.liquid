  </ul>
  <div class="mobile__footer d-block d-md-none px-15">
    <div class="header__currency nav-item">
      <!-- {% render 'currency-selector' %} -->
    </div>
    {% if shop.customer_accounts_enabled %}
        {% if customer %}
          {% if customer.first_name != blank %}
            {% capture first_name %}
              <a class="nav-item" href="/account">{{ customer.first_name }}</a>
            {% endcapture %}
            <a class="nav-item" href="/account">Hola, {{ customer.first_name | truncatewords: 1, "" }}</a><br><br>
          {% else %}
            <a class="nav-item" href="/account">{{ 'layout.customer.account' | t }}</a>
          {% endif %}
          {{ 'layout.customer.log_out' | t | customer_logout_link }}
        {% else %}
          {{ 'layout.customer.log_in' | t | customer_login_link }}
          <span> / </span>
          {{ 'layout.customer.create_account' | t | customer_register_link }}
        {% endif %}
    {% endif %}
    {%- comment -%}<a class="nav-item swym-wishlist" href="#swym-wishlist" id="close">Mi Wishlist</a>{%- endcomment -%}
  </div>
</div>
