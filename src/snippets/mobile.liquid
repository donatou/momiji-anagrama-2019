                    <a href="{{ link.url }}" class="underline text-link">{{ link.title }}</a> 
                    {% else %}
                    <a href="{{ link.url }}" class="underline text-link">{{ link.title }}</a> <span class="mx-05 text-link">/</span>
                  {% endif %}
