<div class="swiper-container-barra">
    <div class="swiper-wrapper header__banner col-12">
        {% for block in section.blocks %}
        <!-- Slide -->
            <p class="swiper-slide swiper-slide-paragraph">
                <a href="{{ block.settings.barra_anuncios_url }}">{{ block.settings.barra_anuncios_copy }}</a>
            </p>
        {% endfor %}
    </div>
    <div class="swiper-button-prev-barra swiper-button-prev"></div>
    <div class="swiper-button-next-barra swiper-button-next"></div>
</div>


{%- comment -%}
    A futuro será necesario cambiar el color del SVG de esta sección
{%- endcomment -%}
{% style %}
.swiper-container-barra {
width: 100%;
height: 100%;
margin-left: auto;
margin-right: auto;
position: relative;
overflow: hidden;
list-style: none;
padding: 1px;
z-index: 1;
text-align: center;
background-color: {{ section.settings.barra_anuncios_bg_color }};
}
.swiper-slide-paragraph a{
    font-family: "GT Super Text Book", serif;
    font-size: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    text-transform: none;
    letter-spacing: inherit;
    color: {{ section.settings.barra_anuncios_font_color }};
}
@media (max-width: 991.98px) {
    .swiper-slide-paragraph a {
        font-size: 16px;
    } 
}
@media (max-width: 767px) {
    .swiper-slide-paragraph a {
        font-size: 14px;
        padding: 0 20px 0px 0px;
    } 
}
@media (max-width: 425px) {
    .swiper-slide-paragraph a {
        font-size: 11px;
    } 
}
.swiper-button-next-barra,
.swiper-button-prev-barra {
    background-image: url({{ 'arrow.svg' | asset_url }});
    background-size: 18px auto;
    height: 45px !important;
    width: 50px;
    right: 0;
    background-color: {{ section.settings.barra_anuncios_bg_color }} !important;
}
{% endstyle %}