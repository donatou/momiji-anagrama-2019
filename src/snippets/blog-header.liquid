      <div class="row">
        <div class="col-md-5 col-lg-6">
          <h1 class="lh-20"><a href="{{ blog.url }}" class="h2">{{ blog.title }}</a></h1>
        </div>
        <div class="col-md-7 col-lg-6 d-flex align-items-end lh-20">
          <ul class="list-unstyled d-inline-flex flex-wrap w-100 align-self-end justify-content-between">
            {% for tag in blog.all_tags %}
              {% if current_tags contains tag %}
                <li class="nav-item text-link link--orange">{{ tag }}</li>
              {% else %}
                <li class="nav-item">{{ tag | link_to_tag: tag }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      </div>